---
interface Props {
  href: string;
  tone: "light" | "middle" |"dark";
}

const t= {
  light: "bg-red-600",
  middle: "bg-red-700",
  dark: "bg-red-800"
}

const { href } = Astro.props;
const bg =  t[Astro.props.tone]

console.log(bg);


---

<a class:list={[bg, "text-white font-chomburi text-sm px-4 py-2 w-full flex flex-col items-center justify-center aspect-video lg:h-full lg:w-auto hover:bg-red-50 hover:text-red-600 "]} target="_blank" href={href}>
  <slot name="icon" />
  <slot />
</a>