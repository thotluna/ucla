---
import { tone } from '@const/index';

interface Props {
  title: string;
  description: string;
  color: "light" | "middle" | "dark";

}

const { title, description, color } = Astro.props;

const bg =  tone[color]
---

<article class:list={ [bg, "flex flex-col items-start justify-center gap-4 p-8 text-white"]}>
  <slot />
  <h3 class="text-white text-left">
    {title}
  </h3>
  <p class="text-white text-left">
    {description}
  </p>
</article>