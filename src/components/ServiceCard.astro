---
interface Props {
  image: string;
  position: 'left' | 'right';
  title: string;
  titleCTA: string;
}
const { image, position, title, titleCTA } = Astro.props;

const direction = position === 'left' ? 'md:flex-row' : 'md:flex-row-reverse';

---

<article class="w-full flex flex-col items-start justify-center gap-8 ">
  <h3>{title}</h3>
  <div class:list={[direction, "w-full flex flex-col justify-start items-center gap-4"]}>
    <picture class="w-full max-w-96 h-full flex-grow-0 flex-shrink-0">
      <source srcset=`/images/${image}.avif` type="image/avif">
      <img src=`/images/${image}.webp` alt="image" class="w-full h-full object-cover rounded-md" />
    </picture>
    <div class="flex flex-col items-start justify-center gap-4 ">
      <slot />
      <div class="w-full flex items-center justify-end gap-2">
        <a href="/contacto" class="border-red-700 border-2 text-red-500 font-chomburi px-4 py-2  rounded-md">
        {titleCTA}
      </a>
      </div>
    
    </div>
  </div>

  
</article>