                <Button href="https://wa.me/584243212325">
                  <WhatsappIcon
                    className="w-6 h-6 animate-rotate-360"
                    slot="icon-left"
                  />
                  Solicite su cita
                </Button>
              </div>
            </div>
          </div>
        </div>
