---
import type { Preload } from "../types/Preload"

interface Props {
	title: string
	description: string
	preload?: Array<Preload>
	canonical?: string
	image?: string
}

const determineCanonicalURL = () => {
	if (Astro.url.host.includes("localhost")) return "http://localhost:4321"
	return canonical || Astro.url.pathname
}

const canonicalURL = new URL(determineCanonicalURL(), Astro.site)

const { title, description, preload, canonical, image = "https://ucla-xi.vercel.app/images/og.jpg" } = Astro.props
---
<title>{title}</title>

<meta charset="UTF-8" />
<meta name="description" content={description} />
<link
      rel="preload"
      href="/fonts/Chonburi-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
		<link
      rel="preload"
      href="/fonts/OpenSans.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

{
	preload?.map(({ href, as, type, rel = "preload", crossorigin }) => (
		<link {rel} {href} {as} {type} {crossorigin} />
	))
}

<link rel="canonical" href={canonicalURL} />
<meta name="viewport" content="width=device-width" />
<meta name="theme-color" content="#d5ff00" />

<meta name="keywords" content="Cardiología, cardiología latinoamericana, cardiología en caracas, cardiología de confianza, cardiología de confianza en caracas, cardiólogo en caracas, cardiólogo económico, enfermedad cardiaca, enfermedad cardíaca, ecocardiograma, electrocardiograma, holter, prueba de esfuerzo, monitoreo holter, terapia cardiovascular" />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@Eladiofeijoo" />
<meta name="twitter:creator" content="@Eladiofeijoo" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={new URL(image, Astro.url)} />

<meta property="og:image" content={new URL(image, Astro.url)} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content="Cardiología por expertos" />
<meta property="og:type" content="website" />
<meta property="og:locale" content="es_ES" />

<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />

<meta name="msapplication-config" content="/browserconfig.xml" />
